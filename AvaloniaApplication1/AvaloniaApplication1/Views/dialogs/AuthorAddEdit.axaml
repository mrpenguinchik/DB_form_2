<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaApplication1.ViewModels"
        xmlns:dialogsViewModels="clr-namespace:AvaloniaApplication1.ViewModels.DialogsViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.Views.AuthorAddEdit"
        x:DataType="dialogsViewModels:AuthorAddEditvm"
        Title="redact">

                <StackPanel>
                    <TextBlock FontSize="24" HorizontalAlignment="Center"> Введите данные автора</TextBlock>
                    <TextBlock FontSize="16" HorizontalAlignment="Center"> Имя</TextBlock>
                    <TextBox HorizontalAlignment="Stretch" Text="{Binding Name}" ></TextBox>
                    <Button Command="{Binding Close}">Подтвердить</Button>
                </StackPanel>
      
    
</Window>
